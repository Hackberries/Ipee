<Window x:Class="Ipee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ipee"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*" />
            <ColumnDefinition Width="141*" />
        </Grid.ColumnDefinitions>
        <Label Name="IPv6Label" Content="Biite geben Sie eine IPv4 Adresse ein." Grid.Column="1" HorizontalAlignment="Left" Margin="417,104,0,0" VerticalAlignment="Top" Width="217"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="451,167,0,0" VerticalAlignment="Top" Width="149" Click="Button_Click"/>
        <TextBox Name="IPBox" Grid.Column="1" HorizontalAlignment="Left" Margin="451,146,0,0" Text="IPv4" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" TextChanged="TextBox_TextChanged"/>
        <ListBox x:Name="subnetListBox" Margin="10,10,630,163" Grid.ColumnSpan="2"/>
        <Button x:Name="subnetListBox_button" Content="Lade Subnetze" HorizontalAlignment="Left" Margin="10,276,0,0" VerticalAlignment="Top" Height="27" Width="321" Click="subnetListBox_button_Click" Grid.ColumnSpan="2"/>
        <ListBox x:Name="subnetListBox_Copy" Margin="76,10,469,163" Grid.Column="1"/>
        <Button x:Name="updateConfigFile_button" Content="Update Konfigurationsdatei" HorizontalAlignment="Left" Margin="10,322,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="321" Click="UpdateConfigFile_button"/>
    </Grid>
</Window>
