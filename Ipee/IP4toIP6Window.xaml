<Window x:Class="Ipee.IP4toIP6Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ipee"
        mc:Ignorable="d"
        Title="Address Converter" Height="303" Width="496">
    <Grid Margin="0,0,0,-6">
        <Button Content="IP umwandeln" VerticalAlignment="Top" Width="104" Click="Button_Click" RenderTransformOrigin="0.721,-0.449" Margin="98,170,98,0"/>
        <TextBox Name="IPv6_Addresse" Text="IPv6 Addresse" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="496" HorizontalContentAlignment="Center" BorderBrush="White" BorderThickness="0,0,0,0" Foreground="Black" AllowDrop="False"/>
        <TextBox x:Name="Binary_Addresse_Copy" IsReadOnly="True" Text="IP in Binär" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Width="496" HorizontalContentAlignment="Center"  BorderBrush="White" Foreground="Black" AllowDrop="False" BorderThickness="0,0,0,0"/>
        <TextBox x:Name ="Ipv4TextBox" HorizontalAlignment="Center" Margin="0,49,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
    </Grid>


</Window>
